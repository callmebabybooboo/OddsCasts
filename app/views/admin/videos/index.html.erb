<!-- admin/videos/index.html.erb -->
<div class="container mx-auto px-6 py-12">
  <h1 class="text-4xl font-extrabold text-center text-indigo-600 mb-8">Video Management</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% if @admin_videos.empty? %>
      <div class="text-center text-gray-500 col-span-full">
        <p>No videos available. Start by adding one!</p>
      </div>
    <% else %>
      <% @admin_videos.each do |video| %>
        <div class="bg-white p-6 rounded-lg shadow-lg transform transition-all hover:scale-105 hover:shadow-2xl duration-300">
          <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= video.title %></h2>
          <p class="text-gray-600 mb-4 truncate"><%= video.url %></p>
          <div class="flex justify-between items-center">
            <%= link_to "Show", admin_video_path(video), class: "text-indigo-500 hover:text-indigo-700 font-medium" %> |
            <%= link_to "Edit", edit_admin_video_path(video), class: "text-yellow-500 hover:text-yellow-700 font-medium" %> |
            <%= button_to "Delete", admin_video_path(video), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700 font-medium" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="mt-8 text-center">
    <%= link_to "Create New Video", new_admin_video_path, class: "inline-block bg-indigo-600 text-white py-3 px-6 rounded-lg shadow-lg hover:bg-indigo-700 font-semibold transform transition-all duration-200 hover:scale-105" %>
  </div>
</div>
