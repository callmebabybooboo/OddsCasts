<div class="container mx-auto px-6 py-12">
  <h1 class="text-4xl font-extrabold text-center text-indigo-600 mb-8">Create New Video</h1>

  <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-lg">
    <%= form_with(model: @admin_video, local: true, class: "space-y-6") do |form| %>

      <% if @admin_video.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-600 px-4 py-3 rounded-lg mb-6">
          <h2 class="text-lg font-semibold">The following errors prevented the video from being saved:</h2>
          <ul class="list-disc pl-6">
            <% @admin_video.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title, class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_field :title, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="form-group">
        <%= form.label :url, class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_field :url, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="form-group">
        <%= form.submit "Create Video", class: "w-full py-3 bg-indigo-600 text-white rounded-lg shadow-lg hover:bg-indigo-700 font-medium transform transition-all duration-200 hover:scale-105" %>
      </div>
    <% end %>

    <%= link_to "Back to Videos", admin_videos_path, class: "mt-6 inline-block bg-gray-300 text-gray-800 py-3 px-6 rounded-lg hover:bg-gray-400 font-medium transform transition-all duration-200 hover:scale-105" %>
  </div>
</div>