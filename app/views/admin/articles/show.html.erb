<div class="container mx-auto p-8">
  <h1 class="text-4xl font-bold text-center text-gray-800 mb-4"><%= @article.title %></h1>
  <p class="text-lg text-gray-700 mb-6"><%= @article.description %></p>

  <div class="flex justify-center mb-6">
    <img src="<%= @article.cover_url %>" alt="<%= @article.title %>" class="w-full max-w-xl h-72 object-cover rounded-md shadow-lg">
  </div>

  <div class="text-center">
    <%= link_to "Back to Articles", admin_articles_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>