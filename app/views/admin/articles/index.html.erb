<div class="container mx-auto p-8">
  <h1 class="text-4xl font-bold text-center text-gray-800 mb-8">Articles</h1>

  <div class="text-center mb-6">
    <%= link_to "Create New Article", new_admin_article_path, class: "bg-blue-500 text-white py-2 px-6 rounded-md hover:bg-blue-600" %>
  </div>

  <div class="space-y-6">
    <% @articles.each do |article| %>
      <div class="border border-gray-300 rounded-md p-6 shadow-lg">
        <%= link_to article.title, admin_article_path(article), class: "text-xl font-semibold text-blue-500 hover:underline" %>
        <p class="mt-2 text-gray-700"><%= truncate(article.description, length: 100) %></p>
    
        <%= if article.cover_url %>
        <img src="<%= article.cover_url %>" alt="<%= article.title %>" class="w-full h-48 object-cover mt-4 rounded-md shadow-md">
      </div>
    <% end %>
  </div>
</div>

