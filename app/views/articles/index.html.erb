<div class="flex flex-wrap">
    <h1 class="text-4xl font-bold text-center mb-8">Podcast Episodes</h1>

    <div class="text-center mt-6">
    <%= link_to "Create New Episode", new_article_path, class: "bg-blue-500 text-white py-2 px-6 rounded-md hover:bg-blue-600" %>
    </div>

    <div class="space-y-6">
    <% @articles.each do |article| %>
        <div class="border p-4 rounded-md">
        <%= link_to article.title, article_path(article), class: "text-xl font-semibold text-blue-500" %>
        <p class="mt-2"><%= truncate(article.description, length: 100) %></p>
        <img src="<%= article.image_url %>" alt="<%= article.title %>" class="w-full h-40 object-cover mt-4 rounded-md">
        </div>
    <% end %>
    </div>
</div>

