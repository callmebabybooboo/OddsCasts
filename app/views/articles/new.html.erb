<h1 class="text-3xl font-bold mb-6 text-center">New Article</h1>
<%= form_with model: @article, local: true, class: "max-w-lg mx-auto" do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block font-semibold text-lg mb-2" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block font-semibold text-lg mb-2" %>
    <%= form.text_area :description, class: "w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :image_url, class: "block font-semibold text-lg mb-2" %>
    <%= form.text_field :image_url, class: "w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex justify-center">
    <%= form.submit "Create Article", class: "bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600" %>
  </div>
<% end %>